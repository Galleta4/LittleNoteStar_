<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/azul_verde"
    tools:context=".act5"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/white"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/le2"
                    android:text="E N C U E S T A :"
                    android:textColor="@color/azulito"
                    android:textSize="34sp"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:text="¿Cuál es tu método de estudio principal?"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/cb_lectura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lectura repetitiva" />

                <CheckBox
                    android:id="@+id/cb_resumenes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resúmenes" />

                <CheckBox
                    android:id="@+id/cb_mapas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mapas mentales" />

                <CheckBox
                    android:id="@+id/cb_ninguno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ninguno" />

                <CheckBox
                    android:id="@+id/cb_otro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Otro" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingBottom="4dp"
                    android:text="¿Cuántas horas sueles dormir por noche?"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/cb_menos6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menos de 6" />

                <CheckBox
                    android:id="@+id/cb_6_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6-7" />

                <CheckBox
                    android:id="@+id/cb_7_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7-8" />

                <CheckBox
                    android:id="@+id/cb_mas8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Más de 8" />

                <Button
                    android:id="@+id/btn_siguiente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/verde_agua"
                    android:text="Siguiente"
                    android:textColor="#0B0B0B" />

            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
